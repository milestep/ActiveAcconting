$icon-font-path = "~bootstrap-styl/fonts/"
$fa-font-path = "~font-awesome-stylus/fonts"
@import "~font-awesome-stylus/stylus/index"
@import 'bootstrap';

html
  font-size 16px
  line-height 20px
  
a
  cursor pointer

p
  font-size 1rem
  &.sm
    font-size .9rem

img, 
textarea
  max-width 100%
  
.nav.nav-tabs
  margin-bottom 15px

.form-group
  &.has-error
    .Select
      .Select-control, .Select-menu-outer
        border 1px solid #a94442

      // &.is-open
      //   .Select-control, .Select-menu-outer
      //     box-shadow inset 0 1px 1px rgba(0,0,0,0.075), 0 0 6px #ce8483

.spin-wrap
  display flex
  align-items center
  justify-content center
  div, span, .spin-text
    &:first-child
      margin-right 8px
    &:only-child
      margin 0

.workspaceForm
  margin-bottom 30px
