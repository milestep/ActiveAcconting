$icon-font-path = "~bootstrap-styl/fonts/"
$fa-font-path = "~font-awesome-stylus/fonts"
@import "~font-awesome-stylus/stylus/index"
@import 'bootstrap';
@import './layout';
@import './elements';
@import './workspaces';
@import './articles';
@import './counterparties';

html
  font-size 16px
  line-height 20px

a
  cursor pointer

p
  font-size 1rem
  &.sm
    font-size .9rem

img,
textarea
  max-width 100%

.nav.nav-tabs
  margin-bottom 15px

.form-group
  &.has-error
    .Select
      .Select-control, .Select-menu-outer
        border 1px solid #a94442

.spin-wrap
  display flex
  align-items center
  justify-content center
  div, span, .spin-text
    &:first-child
      margin-right 8px
    &:only-child
      margin 0

.inline-form
  width 100%
  form
    margin-right 9px

.workspaceForm
  margin-bottom 30px

.react-datepicker__input-container
  width: 100%;
