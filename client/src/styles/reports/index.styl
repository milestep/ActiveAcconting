.reports-filter
  display flex
  align-items center
  justify-content flex-end
  margin-bottom 30px

  &-select
    min-width 102px
    margin-right 20px

  &-months-tabs
    li
      &.empty
        a
          color #777
      &.active
        a
          color #fff

.reports-list
  &-item
    margin-bottom 30px

  &-heading
    display flex
    align-items center
    justify-content space-between
    &.profit
      margin-bottom 40px

  &-value
    font-weight 600

  &-separator
    margin-top 2px
    margin-bottom 18px

  .article-panel
    margin-bottom 0
    border-radius 0
    &:not(:last-child)
      border-bottom: 0

    .panel-body
      padding 13px 15px

    .article-value
      font-weight 600

  .counterparty-wrapper
    padding 2px 0
    font-size 13px

    &.type
      &-Revenue
        color green
      &-Cost
        color red
